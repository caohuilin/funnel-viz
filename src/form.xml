<form>
  <collapse accordion="true">
    <panel title="常规">
      <input type="multiselect" field="metrics" required="true">
        <label>统计指标</label>
        <dataset>fields</dataset>
      </input>
      <input type="radio" field="direction">
        <label>方向</label>
        <initial-value>positive</initial-value>
        <choice value="positive">正序</choice>
        <choice value="negative">逆序</choice>
      </input>
      <input type="text" field="colors">
        <label>颜色(按照指标顺序，用逗号隔开)</label>
      </input>
    </panel>
  </collapse>
</form>